<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.charforge.controller.MainMenuController">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="600" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" styleClass="menu-panel">
        <Label alignment="CENTER" prefHeight="88.0" prefWidth="369.0" style="-fx-font-size: 48px;" styleClass="fantasy-title" text="CHARFORGE" />
        <Label style="-fx-font-size: 18px;" styleClass="fantasy-lore" text="CHARACTER SELECTION" underline="true" />

        <!-- Table View -->
        <TableView fx:id="tableCharacters" prefHeight="300">
            <columns>
                <TableColumn fx:id="colName" prefWidth="200" styleClass="table-column" text="Name" />
                <TableColumn fx:id="colRace" prefWidth="100" styleClass="table-column" text="Race" />
                <TableColumn fx:id="colClass" prefWidth="100" styleClass="table-column" text="Class" />
                <TableColumn fx:id="colGender" prefWidth="100" styleClass="table-column" text="Gender" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </TableView>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleNewCharacter" style="-fx-background-color: #701b1b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" text="NEW CHARACTER" />
            <Button onAction="#handleLoadCharacter" style="-fx-background-color: #c0a062; -fx-text-fill: black; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" text="LOAD SELECTED" />
            <Button onAction="#handleDeleteCharacter" style="-fx-background-color: #701b1b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20; -fx-border-color: #ff0000;" text="DELETE" />

            <padding>
            <Insets bottom="20.0" />
         </padding>
        </HBox>
      <padding>
         <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
      </padding>
      <StackPane.margin>
         <Insets />
      </StackPane.margin>
    </VBox>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</StackPane>
